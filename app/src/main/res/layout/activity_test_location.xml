<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestLocationActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/toggleService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/getLoca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getLoca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="get location"
        app:layout_constraintBottom_toTopOf="@+id/dateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleService" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="63dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/latiText"
        app:layout_constraintStart_toStartOf="@+id/getLoca"
        app:layout_constraintTop_toBottomOf="@+id/getLoca" />

    <TextView
        android:id="@+id/latiText"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:layout_marginStart="127dp"
        app:layout_constraintBottom_toTopOf="@+id/longtiText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateText" />

    <TextView
        android:id="@+id/longtiText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="165dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/latiText"
        app:layout_constraintTop_toBottomOf="@+id/latiText" />

</android.support.constraint.ConstraintLayout>